<%- include("header")-%>

    <div class="box" id="heading">
      <!--EJS variable "listTitle" supplied by server app.js-->
      <h1><%= listTitle %></h1>
    </div>
    <div class="box">

      <!--EJS variable array "newListItems" supplied by server app.js-->
      <% for (var i=0; i<newListItems.length; i++){ %>
      <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" onChange="this.form.submit()" name="checkbox" value="<%=newListItems[i]._id%>">
            <p><%= newListItems[i].name %></p>
        </div>
      </form>
      <% } %>

      <!--Post form activating the "post" function for "/" route (home page) in app.js-->
      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value=<%= listTitle %>>+</button>
      </form>

    </div>

<%- include("footer")-%>
